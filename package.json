{
	"name": "taly",
	"version": "1.0.0",
	"description": "Monorepo for the Taly CRM platform.",
	"private": true,
	"type": "module",
	"workspaces": [
		"api",
		"apps/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"start": "turbo run start",
		"lint": "biome check --apply-unsafe .",
		"lint:eslint": "eslint 'api/src/**/*.controller.ts' --fix",
		"lint:all": "npm run lint && npm run lint:eslint",
		"test": "turbo run test",
		"format": "turbo run format",
		"clean": "rimraf node_modules .turbo .next dist",
		"clean:full": "rimraf node_modules .turbo .next dist && pnpm install",
		"deploy": "turbo run deploy",
		"prisma:generate": "prisma generate --schema=api/src/database/schema.prisma"
	},
	"dependencies": {
		"@apollo/server": "^4.11.3",
		"@aws-sdk/client-s3": "^3.772.0",
		"@jest/globals": "^29.7.0",
		"@nestjs/apollo": "^13.0.3",
		"@nestjs/common": "^8.0.0",
		"@nestjs/config": "^2.0.0",
		"@nestjs/core": "^8.0.0",
		"@nestjs/graphql": "^10.0.0",
		"@nestjs/jwt": "^11.0.0",
		"@nestjs/passport": "^8.0.0",
		"@nestjs/platform-express": "^8.0.0",
		"@nestjs/schedule": "^5.0.1",
		"@nestjs/swagger": "^5.0.0",
		"@nestjs/throttler": "^6.4.0",
		"@prisma/client": "^6.5.0",
		"@stripe/stripe-js": "^6.1.0",
		"@tanstack/react-query": "^5.69.0",
		"@types/graphql-type-json": "^0.3.5",
		"aws-sdk": "^2.1692.0",
		"axios": "^1.8.4",
		"bcrypt": "^5.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"compression": "^1.8.0",
		"dayjs": "^1.11.13",
		"exceljs": "^4.4.0",
		"graphql": "^16.0.0",
		"graphql-type-json": "^0.3.2",
		"handlebars": "^4.7.7",
		"helmet": "^8.1.0",
		"http-proxy-middleware": "^3.0.3",
		"joi": "^17.13.3",
		"jsonwebtoken": "^9.0.2",
		"multer": "1.4.5-lts.2",
		"next": "^15.2.3",
		"node-forge": "^1.3.1",
		"nodemailer": "^6.10.0",
		"passport": "^0.6.0",
		"passport-facebook": "^3.0.0",
		"passport-google-oauth20": "^2.0.0",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"pdfkit": "^0.16.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-hot-toast": "^2.5.2",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.2.0",
		"stripe": "^17.7.0",
		"tailwindcss": "^4.0.15",
		"turbo": "^2.4.4",
		"twilio": "^5.5.1",
		"uuid": "^11.1.0",
		"zod": "^3.24.2",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.23.0",
		"@nestjs/cli": "^8.0.0",
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/testing": "^8.0.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.2.0",
		"@types/aws-lambda": "^8.10.147",
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/express": "^4.17.13",
		"@types/jest": "27.5.0",
		"@types/multer": "^1.4.12",
		"@types/node": "^16.0.0",
		"@types/nodemailer": "^6.4.17",
		"@types/passport-facebook": "^3.0.3",
		"@types/passport-google-oauth20": "^2.0.16",
		"@types/passport-jwt": "^3.0.6",
		"@types/passport-local": "^1.0.38",
		"@types/react": "^19.0.12",
		"@types/react-dom": "^19.0.4",
		"@types/react-helmet": "^6.1.11",
		"@types/supertest": "^2.0.11",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-prettier": "^5.2.3",
		"eslint-plugin-react": "^7.37.4",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"husky": "^9.1.7",
		"jest": "28.0.3",
		"jest-mock-extended": "4.0.0-beta1",
		"lint-staged": "^15.5.0",
		"prettier": "^3.5.3",
		"prisma": "^6.5.0",
		"rimraf": "^3.0.2",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "28.0.1",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.0.0",
		"typescript": "^4.3.5"
	},
	"engines": {
		"node": ">=22.14.0",
		"pnpm": ">=10.4.0"
	},
	"packageManager": "pnpm@10.6.5",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,json,md}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"pnpm": {
		"packageExtensions": {
			"ts-jest": {
				"peerDependencies": {
					"typescript": ">=5.1.0"
				}
			}
		},
		"ignoredBuiltDependencies": [
			"@nestjs/core",
			"@prisma/client",
			"@prisma/engines",
			"@swc/core",
			"aws-sdk",
			"bcrypt",
			"es5-ext",
			"esbuild",
			"prisma",
			"serverless",
			"sharp"
		],
		"onlyBuiltDependencies": [
			"@nestjs/core",
			"@prisma/client",
			"@prisma/engines",
			"@swc/core",
			"aws-sdk",
			"bcrypt",
			"es5-ext",
			"esbuild",
			"prisma",
			"serverless",
			"sharp"
		]
	},
	"prisma": {
		"schema": "api/src/database/schema.prisma"
	},
	"exports": {
		"./*": "./dist/*"
	}
}
