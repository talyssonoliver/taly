{
	"name": "taly",
	"version": "1.0.0",
	"description": "Monorepo for the Taly CRM platform, managing hair salons with microservices and microfrontends.",
	"private": true,
	"scripts": {
		"build": "pnpm run build --recursive",
		"dev": "pnpm run dev --recursive",
		"lint": "pnpm run lint --recursive",
		"test": "pnpm run test --recursive",
		"format": "pnpm run format --recursive",
		"clean": "rimraf node_modules .turbo .next dist",
		"deploy": "pnpm run deploy --recursive",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@types/axios": "^0.14.4",
		"@types/react": "^19.0.8",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"prettier": "^3.4.2",
		"turbo": "^2.4.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@8.0.0",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,json,md}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"pnpm": {
		"packageExtensions": {
			"ts-jest": {
				"peerDependencies": {
					"typescript": ">=5.1.0"
				}
			}
		}
	},
	"overrides": {
		"node-forge": "^1.3.0",
		"webpack-dev-middleware": "^5.3.4",
		"xlsx": "^0.20.2",
		"eslint": "^8.0.0",
		"jest": "^29.0.0",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@tanstack/react-query": "^5.66.0",
		"axios": "^1.4.0",
		"react-hot-toast": "^2.5.1",
		"root": "github:tanstack/react-query"
	}
}
