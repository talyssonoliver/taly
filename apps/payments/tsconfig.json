{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"*": ["node_modules/*", "*"],
			"@shared-ui/*": ["../../shared-ui/src/*"],
			"@shared/*": ["../shared-ui/src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
