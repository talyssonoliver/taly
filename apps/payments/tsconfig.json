{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../../dist/apps/payments",
		"rootDir": "src",
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"jsx": "react-jsx",
		"module": "NodeNext"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": [
		"node_modules",
		"../../dist",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/*.spec.ts"
	]
}
