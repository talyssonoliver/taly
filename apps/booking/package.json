{
	"name": "@taly/booking",
	"version": "1.0.0",
	"type": "module",
	"description": "Microfrontend for the Taly scheduling system",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next build && next start",
		"lint": "next lint",
		"test": "jest --config=jest.config.js",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"format": "prettier --write .",
		"clean": "rimraf .next node_modules"
	},
	"dependencies": {
		"axios": "^1.4.0",
		"date-fns": "^3.5.0",
		"next": "^15.1.6",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"tailwindcss": "^3.4.0",
		"zustand": "^4.3.0"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.0.0",
		"@testing-library/react": "^14.0.0",
		"@types/react": "^19.0.8",
		"@types/react-dom": "^19.0.3",
		"@typescript-eslint/eslint-plugin": "^8.22.0",
		"@typescript-eslint/parser": "^8.22.0",
		"eslint": "^9.19.0",
		"eslint-config-next": "^14.2.23",
		"eslint-plugin-react-hooks": "4.6.0",
		"husky": "^8.0.0",
		"jest": "^29.0.0",
		"lint-staged": "^14.0.0",
		"prettier": "^3.0.0",
		"rimraf": "^5.0.0",
		"ts-jest": "^29.0.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,ts,tsx,json,css,md}": [
			"prettier --write",
			"eslint --fix"
		]
	}
}
