{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": "../..",
    "paths": {
      "@apps/*": ["apps/*"],
      "@booking/*": ["apps/booking/*"],
      "@dashboard/*": ["apps/dashboard/*"],
      "@payments/*": ["apps/payments/*"],
      "@shared/*": ["shared/*"],
      "@shared-ui/*": ["apps/shared-ui/*"]
    },
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "allowJs": true,
    "incremental": true
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/*.test.ts",
    "**/*.test.tsx",
    "apps/**/node_modules"
  ]
}
